@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Home Page";
}

    <div class="text-center">
        <h1 class="display-4">@TempData["baseUrl"]</h1>
        <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
        @await Component.InvokeAsync("PlaygroundPrices", new { playgroundId = "1", baseUrl = TempData["baseUrl"] })

        @*@await Component.InvokeAsync("Reservation", new { playgroundId = "1" })*@
    </div>
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/images/01.jpg" alt="First slide">
            <div class="center-content text-center">
                <h1 class="display-2 text-white">SPORT DASH</h1>
                <h3 class="text-white">Find Best Playgrounds near you</h3>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/02.jpg" alt="Second slide">
            <div class="center-content text-center">
                <h1 class="display-2 text-white">SPORT DASH</h1>
                <h3 class="text-white">See photos of a playground before you visit</h3>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/03.jpg" alt="Third slide">
            <div class="center-content text-center">
                <h1 class="display-2 text-white">SPORT DASH</h1>
                <h3 class="text-white">Search our site to find what suits your need</h3>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<section class="pt-5 pb-3">
    <div class="container">
        <h1 class="display-4">Find Playgrounds Near You</h1>
        <p class="lead">
            Sport Dash is the ultimate handy tool for players.
            Use it in your local area to find playgrounds you didn’t know existed.
        </p>
    </div>
</section>


<section class="container">
    <div class="row">
        @foreach (var item in Model)
        {
        <div class="col-md-6">
            <a class="btn btn-info col-12 py-4 my-1 bg-elephant h2" asp-controller="Playground" asp-action="Index" asp-route-id="@item.Id">
                <h5>@item.FullName</h5>
            </a>
            @*<form asp-controller="Playground" asp-action="Index" method="post">
                <input value="@item.Id" name="id" hidden />
                <button type="submit" class="btn btn-info col-12 py-4 my-1 bg-elephant h2">
                    <h5>@item.FullName</h5>
                </button>
            </form>*@
        </div>
        }
    </div>
</section>




