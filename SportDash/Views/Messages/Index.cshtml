@model IEnumerable<Message>
@{
    ViewData["Title"] = "Received Messages";
}

@if (Model.Count() == 0)
{
    <h3 class="mt-5" style="text-align: center;color: #808080">No Recent Messages</h3>
}
else
{
    <div class="container mt-3">
        <h3>Recent Messages</h3>
        <div id="all-msgs"> 
            @foreach (var message in Model)
            {
                <div style="background: #fff;" class="mt-3 round-borders media border p-3">
                    <div class="media-body">
                        <h4>
                            <a asp-action="Message" asp-controller="Playground" asp-route-id="@message.SenderId">@message.Sender.UserName</a>
                            <small> <i>@message.MessageDate</i></small>
                        </h4>
                        <p>@message.Body</p>
                        <div class="container">
                            <button class="btn btn-primary" onclick="sendData('@message.Sender.Id')" data-toggle="modal" data-target="#replayModal">Replay</button>
                        </div>
                    </div>
                </div>
            }
        </div>
        <button class="btn btn-primary w-100 mt-4" onclick="loadAll(event)">Load All...</button>
    </div>
}


<!-- Replay Modal -->
<div class="modal" id="replayModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Replay to Message</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <div class="form-group">
                    <textarea id="replay" placeholder="Write your message ...." class="form-control"></textarea>
                </div>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" onclick="replay()" class="btn btn-primary" data-dismiss="modal">Send</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>


@section Scripts{
    <script>
        let sender = "";
        function sendData(senderId) {
            sender = senderId;
        }
        function replay() {
            const replayMsg = document.querySelector("#replay");
            if (replayMsg.value !== "") {
                connection.invoke("SendMsg", replayMsg.value, sender);
                replayMsg.value = "";
            }
        }
        function loadAll(event) {
            event.target.style.display = "none";
            $.ajax({
                url: "/Messages/GetAll",
                type: 'POST',
                success: function (data) {
                    const allmsgs = document.querySelector("#all-msgs");
                    allmsgs.innerHTML = data;
                }
            })
        }

        connection.on("recMsg", function (res, sender) {
            const date = new Date();
            const currentDate = `${date.getMonth()}/${date.getDate()}/${date.getFullYear()} ${date.getHours()}:${date.getMinutes()}:${date.getSeconds()}`;
            const htmlObj = `
                <div style="background: #fff;" class="round-borders media border p-3 mt-3">
                <div class="media-body">
                    <h4>
                        <a href="/Playground/Message/${sender.id}" >${sender.userName}</a>
                        <small> <i>${currentDate}</i></small>
                    </h4>
                    <p>${res}</p>
                    <div class="container">
                        <button class="btn btn-primary" onclick="sendData('${sender.id}')" data-toggle="modal" data-target="#replayModal">Replay</button>
                    </div>
                </div>
            </div>
            `;
            if (sender.userName != '@(User.Identity.Name)') {
                $('#all-msgs').prepend(htmlObj);
            }
        });
    </script>
}