@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<section class="d-flex justify-content-center py-2">
    <div class="col-md-5">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="form-group">
                <label asp-for="Input.FullName"></label>
                <input asp-for="Input.FullName" class="form-control" />
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedRole"></label>
                <select asp-for="SelectedRole" onchange="renderSportTypes(event)" class="custom-select my-1 mr-sm-2" asp-items="Model.roles">
                    <option value="">Select...</option>
                </select>
                <span asp-validation-for="SelectedRole" class="text-danger"></span>
            </div>
            <div class="form-group" id="sportTypes">
                
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const sportTypes = document.querySelector("#sportTypes");
        // this method is used to show or hide the sport types dropdown
        // only if the user selected the PlaygroundManager Role        
        function renderSportTypes(event) {
            let selectedValue = event.target.value;
            if (selectedValue == "PlaygroundManager") {
                sportTypes.innerHTML = `
                    <div class="form-group">
                        <label>Select Sport Type</label>
                        <select name="SportType" class="custom-select my-1 mr-sm-2">
                            <option value="0">FootBall</option>
                            <option value="1">BasketBall</option>
                            <option value="2">VolleyBall</option>
                            <option value="3">Tennis</option>
                            <option value="4">Others</option>
                        </select>    
                    </div>
                `;
            }
            else {
                sportTypes.innerHTML = "";
            }
        }
    </script>
}
